<%= form_for @history do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :evented_at %><br>
	<%= f.date_select :evented_at %>
</p>
<p>
  <%= f.collection_select :todo_ids, @todos, :id, :title, {}, {multiple: true} %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>