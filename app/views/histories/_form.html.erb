
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, :class => 'form-control'%>
</div>

<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description, :class => 'form-control'%>
</div>
<div class="form-group">
	<%= f.label :evented_at %>
	<%= f.date_select :evented_at, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= f.label :assignees %>
  <%= f.collection_select :assignee_ids, @users, :id, :email, {}, {multiple: true} %>
</div>


<div class="form-group">
  <%= f.label :images %>
  <%= f.file_field :images, :multiple => true %>
</div>

<div class="form-buttons">

<%= link_to 'Back', project_path(@project.user.nickname, @project.title), :class => 'btn btn-default'%>
<%= f.submit :class => 'btn btn-success'%>
</div>
