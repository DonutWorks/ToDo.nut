<div class="form-container">
  <div class="row">

    <div class="col-md-6">
      <h3>
       <%= @project.title %>
      </h3>

      <p class="text-align-right">
        <strong>Creator</strong><br />
        <%= @project.user.email %>
      </p>
      
      <p class="text-align-right">
        <strong>Assignee</strong><br />
        <% @project.assignees.each do |assignee| %>
        <%= assignee.email %><br />
        <% end %>
      </p>


      <p class="word-break">
       <%= @project.description %>
     </p>

      <div class="form-buttons">
        <%= link_to 'Back', projects_path, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_project_path(@project.project_owner,@project.title), class: "btn btn-default" %>
      </div>
    </div>
    
  </div>

</div>