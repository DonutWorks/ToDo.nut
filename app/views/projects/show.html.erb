<div class="form-container">
  <div class="row">

    <div class="col-md-6">
      <h3>
       <%= @project.title %>
      </h3>

      <p class="text-align-right">
        <strong>Creator</strong><br />
        <%= @project.user.email %>
      </p>
      
      <p class="text-align-right">
        <strong>Assignee</strong><br />
        <% @project.assignees.each do |assignee| %>
        <%= assignee.email %><br />
        <% end %>
      </p>


      <p class="word-break">
       <%= @project.description %>
     </p>


    </div>
  </div>

</div>